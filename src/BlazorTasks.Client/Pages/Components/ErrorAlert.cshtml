@if (Error != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning alert-dismissible fade show " role="alert">
                @Error.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick=@OnErrorAlertClosed>
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
}

@functions
{
    [Parameter]
	ApiError Error { get; set; }

    void OnErrorAlertClosed()
    {
        Error = null;
    }
}